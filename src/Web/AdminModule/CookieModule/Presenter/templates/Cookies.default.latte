{block #page_size}max-w-14xl{/block}

{block #heading_actions}
    <a n:if="$user->isAllowed(App\Application\Acl\ImportResource::class, App\Application\Acl\ImportResource::IMPORT)" n:href="openModal! import" data-spinner-for="self" class="ajax inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300">{_import}</a>

    {if $user->isAllowed(App\Application\Acl\CookieResource::class, App\Application\Acl\CookieResource::EXPORT)}
        {control exportDropdown}
    {/if}
    <a n:if="$user->isAllowed(App\Application\Acl\CookieResource::class, App\Application\Acl\CookieResource::CREATE)" n:href="openModal! cookieModal" data-spinner-for="self" class="ajax spinner-white inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">{_add_new_cookie}</a>
{/block}

{block #content}

{snippet cookie_list}
    {control list}
{/snippet}
